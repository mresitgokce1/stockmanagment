@model StokYonetimi.Islemler.CokluModelGonder
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<div class="text-center">
    <h1 class="display-4">KATEGORİ YÖNETİMİ</h1>
</div>

<div class="text-center">
    <h1>KATEGORİLER</h1>
    <hr />
    <a asp-area="" asp-controller="Kategori" asp-action="KategoriEkle" class="btn btn-sm btn-success rounded-0">Kategori Ekle</a>
    <hr />
    <p>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Kategori Görseli</th>
                    <th scope="col">Kategori Adı</th>
                    <th scope="col">Kategorideki Ürün Sayısı</th>
                    <th scope="col">Kategori Durumu</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model.kategoriler)
                {
                <tr>
                    <td><img src="~/img/kategorigorselleri/@item.Gorsel" width="50" height="50" /></td>
                    <td>@item.KategoriAdi</td>

                    @if (@item.Urunler == null)
                    {
                        <td>0</td>
                    }
                    else
                    {
                        <td>@item.Urunler.Count</td>
                    }
                    
                    @if (item.Durum == true)
                    {
                        <td>Aktif</td>
                    }
                    else
                    {
                        <td>Pasif</td>
                    }
                    <td>
                        <a asp-controller="Kategori" asp-action="KategoriGuncelle" asp-route-id="@item.Id" class="btn btn-sm btn-primary rounded-0">Güncelle</a>
                        <a asp-controller="Kategori" asp-action="KategoriSil" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-0">Sil</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>


    </p>
</div>
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<div class="text-center">
    <h1 class="display-4">KATEGORİ YÖNETİMİ</h1>
</div>

<div class="text-center">
    <h1>KATEGORİ EKLE</h1>
    <hr />
</div>
<div>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Kategori Adı</label>
            @Html.TextBox("KategoriAdi", null, new { @class = "form-control", @placeholder = "Kategori Adı" })
        </div>
        <div class="form-group form-check">
            @Html.CheckBox("KategoriDurumu", true, new { @class = "form-check-input" })
            <label class="form-check-label">Aktif</label>
        </div>
        <div class="form-group">
            <label>Kategori Görseli Ekle</label>
            @Html.TextBox("GorselSec", null, new { type = "file" })
        </div>
        <button type="submit" class="btn btn-primary">Kategori Ekle</button>
    </form>
</div>

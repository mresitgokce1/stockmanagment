@model StokYonetimi.Islemler.CokluModelGonder


<div class="text-center">
    <h1 class="display-4">STOK YÖNETİMİ</h1>
</div>



<div class="text-center">
    <h1>ÜRÜNLER</h1>
    <hr />
    <p>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Ürün Görseli</th>
                    <th scope="col">Ürün Adı</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">Stok</th>
                    <th scope="col">Durumu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model.urunler)
                {
                    <tr>
                        <td><img width="50" height="50" src="~/img/urungorselleri/@item.Gorsel"  /></td>

                        <td>@item.UrunAdi</td>

                        <td>
                            @Model.kategoriler.Find(k => k.Id == @item.KategoriId).KategoriAdi
                        </td>

                        <td>@item.Stok</td>
                        @if (item.Durum == true)
                        {
                            <td>Satışa Açık</td>
                        }
                        else
                        {
                            <td>Satışa Kapalı</td>
                        }
                    </tr>
                }
            </tbody>
        </table>


    </p>
</div>
@model StokYonetimi.Islemler.CokluModelGonder
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<div class="text-center">
    <h1 class="display-4">ÜRÜN YÖNETİMİ</h1>
</div>

<div class="text-center">
    <h1>ÜRÜNLER</h1>
    <hr />
    <a asp-area="" asp-controller="Urun" asp-action="UrunEkle" class="btn btn-sm btn-success rounded-0">Ürün Ekle</a>
    <hr/>
    <p>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Ürün Görseli</th>
                    <th scope="col">Ürün Adı</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">Stok</th>
                    <th scope="col">Durumu</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model.urunler)
                {
                    <tr>
                        <td><img src="~/img/urungorselleri/@item.Gorsel" width="50" height="50" /></td>
                        <td>@item.UrunAdi</td>

                        <td>
                            @Model.kategoriler.Find(k => k.Id == @item.KategoriId).KategoriAdi
                        </td>

                        <td>@item.Stok</td>
                        @if (item.Durum == true)
                        {
                            <td>Satışa Açık</td>
                        }
                        else
                        {
                            <td>Satışa Kapalı</td>
                        }
                        <td>
                            <a asp-controller="Urun" asp-action="UrunGuncelle" asp-route-id="@item.Id" class="btn btn-sm btn-primary rounded-0">Güncelle</a>
                            <a asp-controller="Urun" asp-action="UrunSil" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-0">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </p>
</div>